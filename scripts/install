#!/bin/bash

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Installing OpenTracker..."

git clone git://erdgeist.org/opentracker "$install_dir" --quiet

ynh_config_add --template="Makefile" --destination="$install_dir/Makefile"
ynh_config_add --template="opentracker.conf.sample" --destination="$install_dir/opentracker.conf"

pushd $install_dir
	ynh_hide_warnings make
popd

# Set permissions to app files
#REMOVEME? Assuming the install dir is setup using ynh_setup_source, the proper chmod/chowns are now already applied and it shouldn't be necessary to tweak perms | chown -R $app: $install_dir
chmod +x $install_dir/$app

#=================================================
# SETUP SYSTEMD
#=================================================
ynh_script_progression "Configuring $app's systemd service..."

# Create a dedicated systemd config
ynh_config_add_systemd

#=================================================
# INTEGRATE SERVICE IN YUNOHOST
#=================================================
ynh_script_progression "Integrating service in YunoHost..."

yunohost service add $app --description="Bittorrent tracker" --log="systemd" --needs_exposed_ports="$port"

# Start a systemd service
ynh_systemctl --service=$app --action=start --log_path="systemd"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Installation of OpenTracker completed"
